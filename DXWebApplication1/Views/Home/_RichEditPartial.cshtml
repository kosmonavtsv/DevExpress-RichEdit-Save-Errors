@using DevExpress.XtraRichEdit;
@using System.Globalization;
@Html.DevExpress().RichEdit(settings =>
{
    settings.Name = "RichEditTest";
    settings.CallbackRouteValues = new { Controller = "Home", Action = "RichEditPartial" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Height = System.Web.UI.WebControls.Unit.Pixel(900);
    settings.Settings.HorizontalRuler.Visibility = RichEditRulerVisibility.Visible;
    settings.Settings.SpellChecker.Enabled = true;
    settings.Settings.SpellChecker.SuggestionCount = 4;

    settings.Settings.SpellChecker.Dictionaries.Add(new DevExpress.Web.ASPxSpellChecker.ASPxHunspellDictionary
    {
        GrammarPath = "~/App_Data/Dictionaries/en_US.aff",
        DictionaryPath = "~/App_Data/Dictionaries/en_US.dic",
        Culture = new CultureInfo("en-US"),
        CacheKey = "HunsDic"
    });

    settings.Settings.SpellChecker.OptionsSpelling.IgnoreUpperCaseWords = true;
    settings.Settings.SpellChecker.OptionsSpelling.IgnoreEmails = true;

}).Open("123",
    DevExpress.XtraRichEdit.DocumentFormat.Rtf,
    () => File.ReadAllBytes(System.Web.Hosting.HostingEnvironment.MapPath("~/App_Data/NoSpace.rtf"))).GetHtml()
